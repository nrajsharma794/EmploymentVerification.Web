@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">To verify employment details</h5>
            </div>
            <div id="verify_emp" class="card-body">
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">Employee ID <span class="text-danger">*</span></label>
                    <div class="col-md-8">
                        <input type="number" id="txtEmployeeId" v-model="props.data.EmployeeId" class="form-control" maxlength="15" onKeyPress="if(this.value.length==15) return false" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">Company Name <span class="text-danger">*</span></label>
                    <div class="col-md-8">
                        <input type="text" id="txtCompanyName" v-model="props.data.CompanyName" class="form-control" maxlength="100" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">Verification Code <span class="text-danger">*</span></label>
                    <div class="col-md-8">
                        <input type="text" id="txtVerificationCode" v-model="props.data.VerificationCode" class="form-control" maxlength="10" />
                    </div>
                </div>
                <div class="form-group" v-if="alertMessage.length == 0">
                    <button type="button" v-on:click="onSubmitBtn" class="btn btn-primary col-md-4 offset-md-2">Verify</button>
                    <a href="" class="btn btn-secondary col-md-4 ms-1">Reset</a>
                </div>
                <div class="form-group" v-if="alertMessage.length > 0">
                    <button disabled class="btn btn-secondary col-md-4 offset-md-2">{{alertMessage}}</button>
                </div>

                <div class="modal" id="myModal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <!-- Modal Header -->
                            <div class="modal-header">
                                <button type="button" class="close" v-on:click="closeModal" data-dismiss="modal">&times;</button>
                            </div>
                            <!-- Modal body -->
                            <div class="modal-body" id="expanded-area">
                                {{msg}}
                            </div>
                            <!-- Modal footer -->
                            <div class="modal-footer">
                                <button type="button" v-bind:class="alertClass" v-on:click="closeModal" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/verify_emp.js"></script>
}